{% extends 'layout.html.twig' %}

{% block content %}
<section class="portfolio">
    <h2 class="text-2xl font-bold mb-4">Portfolio</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for project in projects %}
            <div class="border rounded-lg overflow-hidden shadow-lg">
                <img src="{{ project.imagePath }}" alt="{{ project.title }}" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-xl font-semibold">{{ project.title }}</h3>
                    <p class="text-gray-600">{{ project.description }}</p>
                    <a href="{{ project.link }}" class="text-blue-500 hover:underline">Ver Projeto</a>
                </div>
            </div>
        {% else %}
            <p class="text-gray-500">Nenhum projeto encontrado.</p>
        {% endfor %}
    </div>
</section>
{% endblock %}