<div class="gallery">
    <h2 class="text-2xl font-bold mb-4">Gallery</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        {% for media in galleryItems %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img src="{{ media.path }}" alt="{{ media.filename }}" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-lg font-semibold">{{ media.filename }}</h3>
                </div>
            </div>
        {% else %}
            <p class="col-span-full text-center text-gray-500">No images found in the gallery.</p>
        {% endfor %}
    </div>
</div>