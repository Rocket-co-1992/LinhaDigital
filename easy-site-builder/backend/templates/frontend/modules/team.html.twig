<div class="team-module">
    <h2 class="text-2xl font-bold mb-4">Our Team</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for member in team_members %}
            <div class="team-member bg-white shadow-md rounded-lg p-4">
                <img src="{{ member.photo }}" alt="{{ member.name }}" class="w-full h-48 object-cover rounded-t-lg">
                <h3 class="text-xl font-semibold mt-2">{{ member.name }}</h3>
                <p class="text-gray-600">{{ member.position }}</p>
                <p class="mt-2">{{ member.bio }}</p>
            </div>
        {% endfor %}
    </div>
</div>