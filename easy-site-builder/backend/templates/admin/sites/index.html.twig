{% extends 'base.html.twig' %}

{% block title %}Sites - Admin{% endblock %}

{% block body %}
<div class="container mx-auto mt-5">
    <h1 class="text-2xl font-bold">Gerenciar Sites</h1>
    <a href="{{ path('site_new') }}" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded">Adicionar Novo Site</a>

    {% if sites is empty %}
        <div class="mt-4">
            <p class="text-gray-500">Nenhum site encontrado.</p>
        </div>
    {% else %}
        <table class="min-w-full mt-4 border border-gray-300">
            <thead>
                <tr class="bg-gray-100">
                    <th class="border px-4 py-2">ID</th>
                    <th class="border px-4 py-2">Nome</th>
                    <th class="border px-4 py-2">Slug</th>
                    <th class="border px-4 py-2">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for site in sites %}
                    <tr>
                        <td class="border px-4 py-2">{{ site.id }}</td>
                        <td class="border px-4 py-2">{{ site.name }}</td>
                        <td class="border px-4 py-2">{{ site.slug }}</td>
                        <td class="border px-4 py-2">
                            <a href="{{ path('site_edit', { 'id': site.id }) }}" class="text-blue-500">Editar</a>
                            <a href="{{ path('site_delete', { 'id': site.id }) }}" class="text-red-500 ml-2" onclick="return confirm('Tem certeza que deseja excluir este site?');">Excluir</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}