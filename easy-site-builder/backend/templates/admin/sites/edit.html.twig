{% extends 'base.html.twig' %}

{% block title %}Edit Site{% endblock %}

{% block body %}
<div class="container mx-auto">
    <h1 class="text-2xl font-bold mb-4">Edit Site</h1>

    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'input'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.slug) }}
            {{ form_widget(form.slug, {'attr': {'class': 'input'}}) }}
            {{ form_errors(form.slug) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.owner_user_id) }}
            {{ form_widget(form.owner_user_id, {'attr': {'class': 'input'}}) }}
            {{ form_errors(form.owner_user_id) }}
        </div>

        <div class="mb-4">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('admin_sites_index') }}" class="text-blue-500 hover:underline">Back to Sites</a>
</div>
{% endblock %}