{% extends 'base.html.twig' %}

{% block title %}Edit Page{% endblock %}

{% block body %}
<div class="container mx-auto">
    <h1 class="text-2xl font-bold mb-4">Edit Page</h1>

    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'input'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.slug) }}
            {{ form_widget(form.slug, {'attr': {'class': 'input'}}) }}
            {{ form_errors(form.slug) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.is_published) }}
            {{ form_widget(form.is_published) }}
            {{ form_errors(form.is_published) }}
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    {{ form_end(form) }}

    <a href="{{ path('admin_pages_index') }}" class="mt-4 inline-block text-blue-500">Back to Pages</a>
</div>
{% endblock %}