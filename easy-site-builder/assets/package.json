{
  "name": "easy-site-builder",
  "version": "1.0.0",
  "description": "A simple site builder for small entrepreneurs, freelancers, agencies, and SMEs.",
  "main": "js/app.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./css/app.css -o ../build/css/app.css --minify",
    "build:js": "webpack --mode=production",
    "dev": "npm run dev:css & npm run dev:js",
    "dev:css": "tailwindcss -i ./css/app.css -o ../build/css/app.css --watch",
    "dev:js": "webpack --mode=development --watch",
    "compile": "mkdir -p ../build/css ../build/js && npm run build"
  },
  "dependencies": {
    "alpinejs": "^3.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.0",
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "author": "Your Name",
  "license": "MIT"
}